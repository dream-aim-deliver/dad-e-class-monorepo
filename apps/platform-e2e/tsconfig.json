        "src/**/*.spec.js",
        "src/**/*.test.ts",
        "src/**/*.test.js",
        "src/**/*.d.ts"
    ],
    "exclude": ["node_modules", "dist", "eslint.config.js"],
    "references": [
        {
            "path": "../../packages/models"
        }
    ]
}
