{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": false
    },
    "include": [
        "**/*.ts",
        "**/*.js",
        "playwright.config.ts",
