{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../../",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/platform/.next/types/**/*.ts",
    "../../dist/apps/platform/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "postcss.config.mjs", "eslint.config.mjs",
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../packages/ui-kit/tsconfig.lib.json"
    },
    {
      "path": "../../packages/translations/tsconfig.lib.json"
    },
    {
      "path": "../../packages/models/tsconfig.json"
    }
  ]
}
