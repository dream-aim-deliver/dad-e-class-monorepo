{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "lib",
    "outDir": "./out-tsc/lib",
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "jsx": "react-jsx",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ]
  },
  "skipLibCheck": true,
  "include": ["lib/**/*.ts", "lib/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "tools",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "lib/**/*.test.ts",
    "lib/**/*.spec.ts",
    "lib/**/*.test.tsx",
    "lib/**/*.spec.tsx",
    "lib/**/*.test.js",
    "lib/**/*.spec.js",
    "lib/**/*.test.jsx",
    "lib/**/*.spec.jsx",
    "**/*.stories.ts",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.stories.tsx"
  ],
  "references": [
    {
      "path": "../translations/tsconfig.lib.json"
    }
  ]
}
