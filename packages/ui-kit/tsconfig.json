{
  "extends": "../../tsconfig.base.json", // <- Try to change the base config to match most of the projects
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "paths": {
      "@/components/*": ["./lib/components/*"],
      "@/assets/*": ["./lib/assets/*"],
      "@/hooks/*": ["./lib/hooks/*"],
      "@/contexts/*": ["./lib/contexts/*"]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["vite/client", "vitest", "@testing-library/jest-dom"]
  },

  "include": ["lib/**/*.ts", "lib/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules", "dist", "tools"],
}
