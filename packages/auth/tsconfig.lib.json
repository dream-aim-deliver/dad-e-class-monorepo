{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./out-tsc/lib",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "declaration": true,
    "types": [
      "node",
      "vite/client"
    ]
  },
  "skipLibCheck": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "vite.config.ts"],
  "references": [
    {
      "path": "../models/tsconfig.lib.json"
    }
  ]
}
